pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh label: '', script: 'mvn clean deploy'
            }
        }
        stage('Sonar Scan') {
            steps {
                sh label: '', script: 'mvn sonar:sonar'
            }
        }
        stage('Deploy') {
            steps {
                sh label: '', script: 'mvn clean deploy'
            }
        }
    }
}
